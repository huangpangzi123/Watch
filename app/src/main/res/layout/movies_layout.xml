<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal"
        android:focusable="true"
        android:focusableInTouchMode="true">
        <EditText
            android:id="@+id/searchVideo_editText"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="7dp"
            android:layout_weight="1"
            android:hint="输入搜索内容~~"
            android:background="@drawable/shape_searchedittext"/>
        <Button
            android:id="@+id/searchVideo_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="搜索"
            android:textColor="#ffffff"
            android:enabled="false"
            android:background="@drawable/shape_searchbutton"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tiShiFindVideo_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="没事儿找个电影看看"/>
    <ListView
        android:id="@+id/videoUrlList_listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </ListView>
</LinearLayout>